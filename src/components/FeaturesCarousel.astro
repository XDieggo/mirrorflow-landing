</section>

<style>
  .features-section {
    padding: 2rem 0;
    overflow: hidden;
  }
  
  .carousel-container {
    width: 100%;
    overflow: hidden;
    mask-image: linear-gradient(
      to right,
      transparent,
      black 5%,
      black 95%,
      transparent
    );
  }
  
  .carousel-track {
    display: flex;
    gap: 1.25rem;
    animation: scroll-features 35s linear infinite;
    width: max-content;
  }
  
  .carousel-track:hover {
    animation-play-state: paused;
  }
  
  @keyframes scroll-features {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  .feature-card {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    min-width: 260px;
    max-width: 280px;
    background: rgba(30, 41, 59, 0.7);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(148, 163, 184, 0.12);
    border-radius: 1rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: default;
  }
  
  :root[data-theme="light"] .feature-card {
    background: rgba(255, 255, 255, 0.85);
    border-color: rgba(0, 0, 0, 0.06);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  }
  
  .feature-card:hover {
    transform: translateY(-4px) scale(1.02);
    border-color: var(--accent-color);
    box-shadow: 
      0 8px 30px rgba(0, 0, 0, 0.15),
      0 0 20px color-mix(in srgb, var(--accent-color) 30%, transparent);
  }
  
  .feature-icon {
    flex-shrink: 0;
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.75rem;
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--glow-color) 15%, transparent),
      color-mix(in srgb, var(--glow-color) 5%, transparent)
    );
    box-shadow: 0 0 15px color-mix(in srgb, var(--glow-color) 25%, transparent);
    transition: all 0.3s ease;
  }
  
  .feature-card:hover .feature-icon {
    box-shadow: 0 0 25px color-mix(in srgb, var(--glow-color) 50%, transparent);
    transform: scale(1.1);
  }
  
  .icon-emoji {
    font-size: 1.5rem;
    line-height: 1;
  }
  
  .feature-content {
    flex: 1;
    min-width: 0;
  }
  
  .feature-title {
    font-size: 0.95rem;
    font-weight: 700;
    color: var(--sl-color-white);
    margin: 0 0 0.25rem 0;
    letter-spacing: -0.3px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  :root[data-theme="light"] .feature-title {
    color: var(--sl-color-gray-1);
  }
  
  .feature-description {
    font-size: 0.8rem;
    color: var(--sl-color-gray-3);
    margin: 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .feature-card {
      min-width: 230px;
      max-width: 250px;
      padding: 0.875rem 1.25rem;
    }
    
    .feature-icon {
      width: 2.5rem;
      height: 2.5rem;

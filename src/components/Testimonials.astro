  es: { title: 'Opiniones de Traders', subtitle: 'Únete a miles de usuarios que confían en MirrorFlow para replicar sus operaciones' },
  en: { title: 'Trader Reviews', subtitle: 'Join thousands of users who trust MirrorFlow to replicate their trades' }
};

const content = t[lang];
const reviews = testimonials[lang];
// Duplicate for infinite scroll effect
const allReviews = [...reviews, ...reviews];
---

<section class="testimonials-section">
  <div class="testimonials-header">
    <h2 class="testimonials-title">{content.title}</h2>
    <p class="testimonials-subtitle">{content.subtitle}</p>
  </div>

  <div class="carousel-container">
    <div class="carousel-track">
      {allReviews.map((review, index) => (
        <article class="testimonial-card" style={`--card-index: ${index}`}>
          <!-- Avatar floating on top -->
          <div class="avatar-wrapper">
            <img src={review.avatar} alt={review.name} class="avatar-image" width="80" height="80" loading="lazy" />
          </div>
          
          <!-- Card content -->
          <div class="card-content">
            <div class="reviewer-info">
              <span class="reviewer-name">{review.name}</span>
              <span class="reviewer-country">{review.country}</span>
            </div>
            <p class="review-text">"{review.text}"</p>
            
            <div class="stars">
              {[...Array(5)].map((_, i) => (
                <svg key={i} class={`star ${i < review.rating ? 'filled' : 'empty'}`} viewBox="0 0 24 24">
                  <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z" />
                </svg>
              ))}
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials-section {
    padding: 6rem 1rem 4rem;
    overflow: hidden;
  }
  
  .testimonials-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .testimonials-title {
    font-size: 4.8rem;
    line-height: 4.7rem;
    letter-spacing: -3px;
    font-weight: 700;
    color: var(--sl-color-white);
    margin-bottom: 0.5rem;
  }
  
  :root[data-theme="light"] .testimonials-title {
    color: var(--sl-color-gray-1);
  }
  
  .testimonials-subtitle {
    font-size: 1.125rem;
    line-height: 1.75rem;
    letter-spacing: -0.2px;
    color: var(--sl-color-gray-3);
  }
  
  @media (max-width: 1040px) {
    .testimonials-title {
      font-size: 3.8rem;
      line-height: 3.7rem;
      letter-spacing: -2px;
    }
  }
  
  @media (max-width: 548px) {
    .testimonials-title {
      font-size: 2.8rem;
      line-height: 2.7rem;
      letter-spacing: -1px;
    }
  }
  
  .carousel-container {
    width: 100%;
    overflow: hidden;
    mask-image: linear-gradient(
      to right,
      transparent,
      black 8%,
      black 92%,
      transparent
    );
    padding-top: 3rem;
  }
  
  .carousel-track {
    display: flex;
    gap: 2rem;
    animation: scroll 45s linear infinite;
    width: max-content;
  }
  
  .carousel-track:hover {
    animation-play-state: paused;
  }
  
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  .testimonial-card {
    flex-shrink: 0;
    width: 300px;
    position: relative;
    padding-top: 2.5rem;
  }
  
  .avatar-wrapper {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
  }
  
  .avatar-image {
    width: 5rem;
    height: 5rem;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid rgba(99, 102, 241, 0.3);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    background: var(--sl-color-bg);
  }
  
  :root[data-theme="light"] .avatar-image {
    border-color: rgba(99, 102, 241, 0.2);
  }
  
  .card-content {
    background: rgba(30, 41, 59, 0.8);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(148, 163, 184, 0.15);
    border-radius: 1.25rem;
    padding: 3.5rem 1.5rem 1.5rem;
    text-align: center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    min-height: 180px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  :root[data-theme="light"] .card-content {
    background: rgba(255, 255, 255, 0.95);
    border-color: rgba(0, 0, 0, 0.08);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
  }
  
  .testimonial-card:hover .card-content {
    transform: translateY(-4px);
    border-color: rgba(99, 102, 241, 0.4);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }
  
  .review-text {
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--sl-color-gray-2);
    margin: 0 0 1rem 0;
    font-style: italic;
    flex-grow: 1;
  }
  
  :root[data-theme="light"] .review-text {
    color: var(--sl-color-gray-2);
  }
  
  .reviewer-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    margin-bottom: 0.75rem;
  }
  
  .reviewer-name {
    font-weight: 700;
    font-size: 1rem;
    color: var(--sl-color-white);
  }
  
  :root[data-theme="light"] .reviewer-name {
    color: var(--sl-color-gray-1);
  }
  
  .reviewer-country {
    font-size: 0.8rem;
    color: var(--sl-color-gray-4);
  }

  
  .stars {
    display: flex;
    flex-direction: box;
    justify-content: center;
    align-items: center;
    text-align: center;
    gap: 4 rem;
    margin-top: auto;
    flex-wrap: nowrap;
  }
  
  .star {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 4px; 
    margin-top: 15px;
    width: 24px;
    height: 24px;
  }
  
  .star.filled {
    fill: #FBBF24;
    filter: drop-shadow(0 0 3px rgba(251, 191, 36, 0.5));
  }
  
  .star.empty {
    fill: rgba(148, 163, 184, 0.3);
  }
  
  :root[data-theme="light"] .star.empty {
    fill: rgba(148, 163, 184, 0.4);
  }
  
  @media (max-width: 768px) {
    .testimonial-card {
      width: 280px;
    }
    
    .card-content {
      padding: 3rem 1.25rem 1.25rem;
      min-height: 160px;
    }
    
    .avatar-image {
      width: 4rem;
      height: 4rem;
    }
  }
</style>

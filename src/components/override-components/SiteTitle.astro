---
import config from "@/config/config.json" assert { type: "json" };
import ImageMod from "../ImageMod.astro";
const { siteTitle, siteTitleHref } = Astro.locals.starlightRoute;

const { src, srcDarkmode }: { src?: string; srcDarkmode?: string } =
  Astro.props;

const theme_switcher = config.settings.theme_switcher;
const {
  logo,
  logo_darkmode,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_darkmode: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;

// Use text logo if logo_text is set
const useTextLogo = logo_text && logo_text.trim() !== '';
---

<a href={siteTitleHref} class="navbar-brand inline-block">
  {
    useTextLogo ? (
      <span class="logo-split">
        <img src="/mirrorflow-logo.png" alt="MirrorFlow" class="logo-img" />
        <span class="logo-mirror">Mirror</span><span class="logo-flow">Flow</span>
      </span>
    ) : src || srcDarkmode || logo || logo_darkmode ? (
      <>
        <ImageMod
          src={src ? src : logo}
          class={`inline-block  ${theme_switcher && "dark:hidden"}`}
          width={logo_width.replace("px", "") * 2}
          height={logo_height.replace("px", "") * 2}
          alt={title}
          style={{
            height: logo_height.replace("px", "") + "px",
            width: logo_width.replace("px", "") + "px",
          }}
          format="webp"
        />

        {theme_switcher && (
          <ImageMod
            src={srcDarkmode ? srcDarkmode : logo_darkmode}
            class={`hidden dark:inline-block`}
            width={logo_width.replace("px", "") * 2}
            height={logo_height.replace("px", "") * 2}
            alt={title}
            style={{
              height: logo_height.replace("px", "") + "px",
              width: logo_width.replace("px", "") + "px",
            }}
            format="webp"
          />
        )}
      </>
    ) : (
      siteTitle || title
    )
  }</a
>

<style>
  .navbar-brand {
    text-decoration: none !important;
  }
  
  .navbar-brand:hover {
    text-decoration: none !important;
  }
  
  .logo-split {
    display: flex;
    align-items: center;
    font-size: 1.5rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    text-decoration: none !important;
  }
  
  .logo-img {
    height: 32px;
    width: auto;
  }
  
  .logo-mirror {
    color: var(--sl-color-white);
  }
  
  :root[data-theme="light"] .logo-mirror {
    color: var(--sl-color-gray-1);
  }
  
  .logo-flow {
    background: linear-gradient(135deg, #38bdf8, #818cf8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  :root[data-theme="light"] .logo-flow {
    background: linear-gradient(135deg, #0284c7, #6366f1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>

  <script is:inline>
    // ========== Supabase Client ==========
    const supabaseUrl = 'https://euxbyvpmofedsfvbdhlj.supabase.co';
    const supabaseAnonKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImV1eGJ5dnBtb2ZlZHNmdmJkaGxqIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjgzOTUxODEsImV4cCI6MjA4Mzk3MTE4MX0.PVHHg9EBS404as0tHgoEFW0-Q7ZOWev1xLVdfx8GkZM';
    const { createClient } = supabase;
    const supabaseClient = createClient(supabaseUrl, supabaseAnonKey);

    // ========== Theme & Language Switching ==========
    const html = document.documentElement;
    const themeBtn = document.getElementById('theme-toggle');
    const langBtns = document.querySelectorAll('.lang-btn');

    // Initialize theme
    const savedTheme = localStorage.getItem('theme') || 'dark';
    html.setAttribute('data-theme', savedTheme);
    themeBtn.textContent = savedTheme === 'dark' ? 'üåô' : '‚òÄÔ∏è';

    // Initialize language
    const savedLang = localStorage.getItem('lang') || 'es';
    html.setAttribute('data-lang', savedLang);
    langBtns.forEach(btn => {
      btn.classList.toggle('active', btn.dataset.lang === savedLang);
    });

    // Theme toggle
    themeBtn?.addEventListener('click', () => {
      const current = html.getAttribute('data-theme');
      const next = current === 'dark' ? 'light' : 'dark';
      html.setAttribute('data-theme', next);
      localStorage.setItem('theme', next);
      themeBtn.textContent = next === 'dark' ? 'üåô' : '‚òÄÔ∏è';
    });

    // Language buttons
    langBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const lang = btn.dataset.lang;
        html.setAttribute('data-lang', lang);
        localStorage.setItem('lang', lang);
        langBtns.forEach(b => b.classList.toggle('active', b.dataset.lang === lang));
      });
    });

    // ========== Referral Tracking ==========
    async function processReferral() {
      // Get URL parameters
      const params = new URLSearchParams(window.location.search);
      const refCode = params.get('ref') || localStorage.getItem('mirrorflow_ref');
      const buyerEmail = params.get('email') || params.get('payer_email') || '';
      const amount = parseFloat(params.get('amount') || params.get('payment_gross') || '49');

      // If no referral code, check localStorage (might have been saved earlier)
      if (!refCode) {
        console.log('No referral code found');
        return;
      }

      console.log('Processing referral:', { refCode, buyerEmail, amount });

      try {
        // Find affiliate by referral code
        const { data: affiliate, error: affError } = await supabaseClient
          .from('affiliates')
          .select('id, email, name')
          .eq('referral_code', refCode.toUpperCase())
          .single();

        if (affError || !affiliate) {
          console.log('Affiliate not found for code:', refCode);
          return;
        }

        console.log('Found affiliate:', affiliate);

        // Calculate commission (10%)
        const commissionRate = 0.10;
        const commission = amount * commissionRate;

        // Check if this sale was already recorded (prevent duplicates)
        const { data: existingSale } = await supabaseClient
          .from('referred_sales')
          .select('id')
          .eq('affiliate_id', affiliate.id)
          .eq('buyer_email', buyerEmail)
          .single();

        if (existingSale) {
          console.log('Sale already recorded');
          document.getElementById('referral-notice').classList.remove('hidden');
          return;
        }

        // Record the sale
        const { error: saleError } = await supabaseClient
          .from('referred_sales')
          .insert({
            affiliate_id: affiliate.id,
            buyer_email: buyerEmail || 'unknown@paypal.com',
            sale_amount: amount,
            commission_amount: commission,
            payment_status: 'pending'
          });

        if (saleError) {
          console.error('Error recording sale:', saleError);
          return;
        }

        // Update affiliate pending earnings
        const { error: updateError } = await supabaseClient.rpc('add_pending_earnings', {
          p_affiliate_id: affiliate.id,
          p_amount: commission
        });

        // If RPC doesn't exist, update directly
        if (updateError) {
          await supabaseClient
            .from('affiliates')
            .update({ 
              pending_earnings: supabaseClient.raw(`pending_earnings + ${commission}`),
              total_earnings: supabaseClient.raw(`total_earnings + ${commission}`)
            })
            .eq('id', affiliate.id);
        }

        console.log('Sale recorded successfully!');
        
        // Show referral notice
        document.getElementById('referral-notice').classList.remove('hidden');

        // Clear the stored ref code
        localStorage.removeItem('mirrorflow_ref');

      } catch (err) {
        console.error('Error processing referral:', err);
      }
    }

    // Run on page load
    processReferral();
  </script>

---
/**
 * MirrorFlow Affiliate Portal
 * Standalone page with client-side language/theme switching
 */
import config from "@/config/config.json";
import ImageMod from "../components/ImageMod.astro";

const { settings } = config;
---

<!DOCTYPE html>
<html lang="es" data-theme="dark" data-lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Portal de Afiliados | MirrorFlow</title>
  <meta name="description" content="√önete al programa de afiliados de MirrorFlow y gana 10% de comisi√≥n por cada venta." />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>
    /* ========== CSS Variables ========== */
    :root {
      --color-bg: #0f172a;
      --color-bg-secondary: #1e293b;
      --color-text: #e2e8f0;
      --color-text-secondary: #94a3b8;
      --color-primary: #3b82f6;
      --color-accent: #8b5cf6;
      --color-success: #22c55e;
      --color-danger: #ef4444;
      --card-bg: rgba(30, 41, 59, 0.6);
      --card-border: rgba(148, 163, 184, 0.15);
      --input-bg: rgba(15, 23, 42, 0.6);
      --gradient: linear-gradient(135deg, #38bdf8, #818cf8);
    }

    [data-theme="light"] {
      --color-bg: #f8fafc;
      --color-bg-secondary: #e2e8f0;
      --color-text: #1e293b;
      --color-text-secondary: #64748b;
      --card-bg: rgba(255, 255, 255, 0.8);
      --card-border: rgba(148, 163, 184, 0.25);
      --input-bg: rgba(255, 255, 255, 0.9);
    }

    /* Background images toggle */
    .bg-dark { display: block; }
    .bg-light { display: none; }
    [data-theme="light"] .bg-dark { display: none; }
    [data-theme="light"] .bg-light { display: block; }

    /* Language toggle */
    .lang-en { display: none !important; }
    .lang-es { display: inline !important; }
    [data-lang="en"] .lang-en { display: inline !important; }
    [data-lang="en"] .lang-es { display: none !important; }

    /* ========== Reset & Base ========== */
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: var(--color-bg);
      color: var(--color-text);
      min-height: 100vh;
      line-height: 1.6;
    }

    .hidden { display: none !important; }

    /* ========== Layout ========== */
    .page-wrapper {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      position: relative;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1.5rem;
      width: 100%;
    }

    /* ========== Background ========== */
    .hero-bg {
      position: fixed;
      inset: 0;
      z-index: -1;
      overflow: hidden;
    }

    .hero-bg img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    /* ========== Header ========== */
    .portal-header {
      position: sticky;
      top: 0;
      z-index: 100;
      backdrop-filter: blur(12px);
      background: color-mix(in srgb, var(--color-bg) 85%, transparent);
      border-bottom: 1px solid var(--card-border);
    }

    .navbar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1rem 0;
      gap: 1rem;
    }

    /* Logo */
    .logo-link {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      text-decoration: none;
      font-size: 1.5rem;
      font-weight: 800;
      letter-spacing: -0.02em;
    }

    .logo-img {
      height: 32px;
      width: auto;
    }

    .logo-mirror { color: #fff; }
    [data-theme="light"] .logo-mirror { color: #1e293b; }
    .logo-flow {
      background: linear-gradient(135deg, #38bdf8, #818cf8);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    [data-theme="light"] .logo-flow {
      background: linear-gradient(135deg, #0284c7, #6366f1);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    /* Controls */
    .navbar-controls {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .lang-switch {
      display: flex;
      align-items: center;
      background: rgba(148, 163, 184, 0.15);
      border-radius: 9999px;
      padding: 4px;
      gap: 2px;
    }

    .lang-btn {
      padding: 6px 12px;
      font-size: 0.75rem;
      font-weight: 600;
      background: transparent;
      border: none;
      border-radius: 9999px;
      color: var(--color-text-secondary);
      cursor: pointer;
      transition: all 0.2s;
    }

    .lang-btn:hover { color: var(--color-text); }
    .lang-btn.active {
      background: linear-gradient(135deg, #38bdf8, #818cf8);
      color: white;
      box-shadow: 0 2px 8px rgba(129, 140, 248, 0.3);
    }

    .theme-btn {
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: var(--card-bg);
      border: 1px solid var(--card-border);
      border-radius: 50%;
      cursor: pointer;
      font-size: 1rem;
      transition: all 0.2s;
    }

    .theme-btn:hover { background: var(--color-bg-secondary); }
    .theme-btn .sun { display: none; }
    .theme-btn .moon { display: block; }
    [data-theme="light"] .theme-btn .sun { display: block; }
    [data-theme="light"] .theme-btn .moon { display: none; }

    .logout-btn {
      padding: 0.5rem 1rem;
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--color-danger);
      background: color-mix(in srgb, var(--color-danger) 10%, transparent);
      border: 1px solid color-mix(in srgb, var(--color-danger) 30%, transparent);
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.2s;
    }

    .logout-btn:hover {
      background: color-mix(in srgb, var(--color-danger) 20%, transparent);
    }

    /* ========== Main Content ========== */
    .portal-main {
      flex: 1;
      padding: 3rem 1.5rem;
    }

    /* ========== Auth Section ========== */
    .auth-section {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 70vh;
    }

    .auth-container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
      max-width: 1000px;
      width: 100%;
    }

    @media (max-width: 768px) {
      .auth-container {
        grid-template-columns: 1fr;
        gap: 2rem;
      }
    }

    /* Benefits Panel */
    .benefits-panel { padding: 1rem 0; }

    .benefits-title {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      line-height: 1.3;
    }

    .benefits-list {
      list-style: none;
      margin-bottom: 2rem;
    }

    .benefit-item {
      padding: 0.75rem 0;
      font-size: 1rem;
      color: var(--color-text-secondary);
      border-bottom: 1px solid var(--card-border);
    }

    .how-it-works h3 {
      font-size: 1.125rem;
      margin-bottom: 1rem;
    }

    .steps { display: flex; flex-direction: column; gap: 1rem; }

    .step {
      display: flex;
      gap: 1rem;
      align-items: flex-start;
    }

    .step-icon {
      width: 32px;
      height: 32px;
      background: var(--gradient);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      color: white;
      flex-shrink: 0;
    }

    .step-content { display: flex; flex-direction: column; }
    .step-content span { color: var(--color-text-secondary); font-size: 0.875rem; }

    /* Forms */
    .form-card {
      background: var(--card-bg);
      backdrop-filter: blur(20px);
      border: 1px solid var(--card-border);
      border-radius: 16px;
      padding: 2rem;
    }

    .form-card h2 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }

    .form-subtitle {
      color: var(--color-text-secondary);
      margin-bottom: 1.5rem;
    }

    .auth-form { display: flex; flex-direction: column; gap: 1rem; }

    .form-group { display: flex; flex-direction: column; gap: 0.5rem; }

    .form-group label {
      font-size: 0.875rem;
      font-weight: 500;
    }

    .form-group input,
    .form-group select {
      padding: 0.75rem 1rem;
      border: 1px solid var(--card-border);
      border-radius: 8px;
      background: var(--input-bg);
      color: var(--color-text);
      font-size: 1rem;
      transition: all 0.2s;
    }

    .form-group input:focus,
    .form-group select:focus {
      outline: none;
      border-color: var(--color-primary);
      box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-primary) 20%, transparent);
    }

    .form-group input::placeholder { color: var(--color-text-secondary); }

    .error-msg {
      background: color-mix(in srgb, var(--color-danger) 10%, transparent);
      border: 1px solid color-mix(in srgb, var(--color-danger) 30%, transparent);
      color: #fca5a5;
      padding: 0.75rem 1rem;
      border-radius: 8px;
      font-size: 0.875rem;
    }

    .success-msg {
      background: color-mix(in srgb, var(--color-success) 10%, transparent);
      border: 1px solid color-mix(in srgb, var(--color-success) 30%, transparent);
      color: var(--color-success);
      padding: 0.75rem 1rem;
      border-radius: 8px;
      font-size: 0.875rem;
    }

    .submit-btn {
      background: var(--gradient);
      color: white;
      border: none;
      padding: 0.875rem 1.5rem;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
    }

    .submit-btn:hover {
      transform: translateY(-1px);
      box-shadow: 0 4px 20px color-mix(in srgb, var(--color-primary) 40%, transparent);
    }

    .submit-btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
      transform: none;
    }

    .form-switch {
      margin-top: 1.5rem;
      text-align: center;
      color: var(--color-text-secondary);
      font-size: 0.875rem;
    }

    .form-switch button {
      background: none;
      border: none;
      color: var(--color-primary);
      cursor: pointer;
      font-weight: 600;
      margin-left: 0.25rem;
    }

    .link-btn {
      background: none;
      border: none;
      color: var(--color-text-secondary);
      cursor: pointer;
      font-size: 0.875rem;
      margin-top: 0.5rem;
    }

    .link-btn:hover { color: var(--color-primary); }

    /* ========== Verify Section ========== */
    .verify-section {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 60vh;
    }

    .verify-card {
      background: var(--card-bg);
      backdrop-filter: blur(20px);
      border: 1px solid var(--card-border);
      border-radius: 16px;
      padding: 3rem;
      text-align: center;
      max-width: 400px;
    }

    .verify-icon { font-size: 4rem; margin-bottom: 1rem; }
    .verify-card h2 { color: var(--color-success); margin-bottom: 1rem; }
    .verify-card p { color: var(--color-text-secondary); }

    /* ========== Dashboard Section ========== */
    .dashboard-section { animation: fadeIn 0.3s ease; }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .dashboard-title { font-size: 1.75rem; margin-bottom: 2rem; }

    .card {
      background: var(--card-bg);
      backdrop-filter: blur(20px);
      border: 1px solid var(--card-border);
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .card h3 {
      font-size: 1rem;
      color: var(--color-text-secondary);
      margin-bottom: 1rem;
    }

    .referral-input-group {
      display: flex;
      gap: 0.5rem;
    }

    .referral-input-group input {
      flex: 1;
      padding: 0.75rem 1rem;
      border: 1px solid var(--card-border);
      border-radius: 8px;
      background: var(--input-bg);
      color: var(--color-primary);
      font-size: 0.875rem;
      font-weight: 500;
    }

    .copy-btn {
      background: color-mix(in srgb, var(--color-primary) 15%, transparent);
      color: var(--color-primary);
      border: 1px solid color-mix(in srgb, var(--color-primary) 30%, transparent);
      padding: 0.75rem 1rem;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 500;
      transition: all 0.2s;
    }

    .copy-btn:hover { background: color-mix(in srgb, var(--color-primary) 25%, transparent); }

    /* Stats Grid */
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 1rem;
      margin-bottom: 1.5rem;
    }

    @media (max-width: 768px) {
      .stats-grid { grid-template-columns: repeat(2, 1fr); }
    }

    .stat-card {
      background: var(--card-bg);
      backdrop-filter: blur(20px);
      border: 1px solid var(--card-border);
      border-radius: 12px;
      padding: 1.5rem;
      text-align: center;
    }

    .stat-value {
      display: block;
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--color-success);
      margin-bottom: 0.25rem;
    }

    .stat-label {
      font-size: 0.875rem;
      color: var(--color-text-secondary);
    }

    /* Table */
    .table-wrap { overflow-x: auto; }

    .data-table {
      width: 100%;
      border-collapse: collapse;
    }

    .data-table th,
    .data-table td {
      padding: 0.75rem 1rem;
      text-align: left;
      border-bottom: 1px solid var(--card-border);
    }

    .data-table th {
      color: var(--color-text-secondary);
      font-weight: 500;
      font-size: 0.875rem;
    }

    .empty-row td {
      text-align: center;
      color: var(--color-text-secondary);
      padding: 2rem;
    }

    .status-badge {
      padding: 0.25rem 0.75rem;
      border-radius: 9999px;
      font-size: 0.75rem;
      font-weight: 500;
      text-transform: uppercase;
    }

    .status-pending { background: color-mix(in srgb, #fbbf24 10%, transparent); color: #fbbf24; }
    .status-confirmed { background: color-mix(in srgb, var(--color-success) 10%, transparent); color: var(--color-success); }

    /* Payout Form */
    .payout-row {
      display: grid;
      grid-template-columns: 1fr 2fr;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    @media (max-width: 768px) {
      .payout-row { grid-template-columns: 1fr; }
    }

    .payout-note {
      color: var(--color-text-secondary);
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }

    .paypal-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1rem;
      background: linear-gradient(135deg, #003087, #009cde);
      color: white;
      border-radius: 0.5rem;
      font-weight: 600;
      font-size: 0.9rem;
    }

    /* Back Link */
    .back-home {
      text-align: center;
      margin-top: 2rem;
    }

    .back-home a {
      color: var(--color-primary);
      text-decoration: none;
      font-weight: 500;
    }

    .back-home a:hover { text-decoration: underline; }

    /* Footer Enhanced */
    .footer-enhanced {
      margin-top: 2rem;
    }

    .footer-bar {
      border-top: 1px solid var(--card-border);
      padding: 1.5rem 0;
    }

    .footer-content {
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 1.5rem;
    }

    .copyright {
      font-size: 0.875rem;
      color: var(--color-text-secondary);
      margin: 0;
    }

    .legal-links {
      display: flex;
      gap: 1.5rem;
    }

    .legal-links a {
      font-size: 0.875rem;
      color: var(--color-text);
      text-decoration: none;
      transition: color 0.2s ease;
    }

    .legal-links a:hover {
      color: var(--color-primary);
    }

    .social-icons {
      display: flex;
      gap: 0.75rem;
    }

    .social-icons a {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 38px;
      height: 38px;
      border-radius: 50%;
      background: color-mix(in srgb, var(--color-text-secondary) 15%, transparent);
      color: var(--color-text);
      transition: all 0.3s ease;
    }

    .social-icons a:hover {
      background: var(--gradient);
      color: white;
      transform: translateY(-2px);
    }

    @media (max-width: 768px) {
      .footer-content {
        flex-direction: column;
        text-align: center;
      }

      .legal-links {
        flex-wrap: wrap;
        justify-content: center;
      }
    }
  </style>
</head>

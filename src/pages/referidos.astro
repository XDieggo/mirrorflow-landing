      }
      const { error } = await supabaseClient.auth.resetPasswordForEmail(email, { redirectTo: location.origin + '/referidos' });
      alert(error ? error.message : (lang === 'en' ? 'Check your email for reset link' : 'Revisa tu correo para restablecer'));
    });

    // Logout
    logoutBtn?.addEventListener('click', () => supabaseClient.auth.signOut());

    // Copy link
    document.getElementById('copy-link')?.addEventListener('click', async () => {
      const input = document.getElementById('referral-link');
      await navigator.clipboard.writeText(input.value);
      const btn = document.getElementById('copy-link');
      const lang = html.getAttribute('data-lang');
      btn.innerHTML = lang === 'en' ? 'Copied!' : '¬°Copiado!';
      setTimeout(() => { btn.innerHTML = `<span class="lang-es">Copiar</span><span class="lang-en">Copy</span>`; }, 2000);
    });

    // Payout
    document.getElementById('payout-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      if (!currentAffiliate) return;
      const method = document.getElementById('payout-method').value;
      const details = document.getElementById('payout-details').value;
      const lang = html.getAttribute('data-lang');

      const { error } = await supabaseClient.from('payout_requests').insert({
        affiliate_id: currentAffiliate.id,
        requested_amount: currentAffiliate.pending_earnings,
        payout_method: method,
        payout_details: { account: details }
      });

      alert(error ? error.message : (lang === 'en' ? 'Request sent!' : '¬°Solicitud enviada!'));
      if (!error) location.reload();
    });

    init();
  </script>
</body>
